import Layout from '../layouts/Layout.astro';

const contactInfo = [
  {
    icon: "email",
    title: "Email",
    value: "jauresryan740@gmail.com",
    link: "mailto:jauresryan740@gmail.com"
  },
  {
    icon: "phone",
    title: "Phone",
    value: "+237 659 424 990",
    link: "tel:+237659424990"
  },
  {
    icon: "facebook",
    title: "Facebook",
    value: "KENMOGNE OUAMBO JAURÈS RYAN",
    link: "https://www.facebook.com/profile.php?id=61561474287774"
  },
  {
    icon: "instagram",
    title: "Instagram",
    value: "@jaures_ryan",
    link: "https://www.instagram.com/jaures_ryan?igsh=MWJsenV3MmJzaXJ2dA=="
  }
